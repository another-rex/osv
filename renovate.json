{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Australia/Sydney",
  "schedule": ["before 4pm on thursday"],
  "labels": ["dependencies"],
  "postUpdateOptions": ["gomodTidy"],
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    }
    {
      "matchFileNames": [".github/**"],
      "groupName": "workflows",
      "enabled": true
    }
  ]
}
